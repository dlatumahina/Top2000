<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top-2000</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TOP 2000", "", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
	                <li>@Html.ActionLink("Artiesten", "Index", "Artiests")</li>
	                <li>@Html.ActionLink("Liedjes", "Index", "Songs")</li>
	                <li>@Html.ActionLink("Lijst", "Index", "Lijsts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height: 100%; margin: 0 auto -50px;">
        @RenderBody()
        <hr />
        <footer class="bg-primary modal-footer" style="position:relative;height:65px; margin-left:-198px;margin-right:-198px;">
            <p style="text-align:center; margin-bottom:0px ;">&copy; Top 2000 - Groep 9</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
