@model IPagedList<Top2000GOED.Models.Artiest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc;
@using PagedList;
<h2>Index</h2>
<p>
    @if (this.User.IsInRole("admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>

@using (Html.BeginForm("Index", "Artiests", FormMethod.Get))
{
    @Html.TextBox("Searching")<input style="margin-left:5px" type="submit" value="Zoeken" class="btn-primary btn-default" />
}


<table id="artistTable" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().naam)
        </th>
        <th>
            Aantal x in de top 2000
        </th>
        <th>
            Gemiddelde notering van de artiest in de top 2000
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                Niks Gevonden!!
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
        <tr>
            <td>
                <a href="Artiests/artiestNummers?artiestId=@Html.DisplayFor(modelItem => item.artiestid)">@Html.DisplayFor(modelItem => item.naam)</a>
            </td>
	        <td>
                @Html.ActionLink("Details", "Details", new { id = item.artiestid })
                <!--Als admin is ingelogd kan je een artiest bewerken en verwijderen. Anders niet-->
                @if (this.User.IsInRole("admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.artiestid })
                    @Html.ActionLink("Edit", "Edit", new { id = item.artiestid })
                }
            </td>
        </tr>
    }
}
</table>
@Html.PagedListPager(Model, i => Url.Action("Index", "Artiests", new { i, search = Request.QueryString["search"] }))

