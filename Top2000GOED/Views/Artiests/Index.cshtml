@model IEnumerable<Top2000GOED.Models.Artiest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (this.User.IsInRole("admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.naam)
        </td>
        <td>


            @Html.ActionLink("Details", "Details", new { id = item.artiestid })
            <!--Als admin is ingelogd kan je een artiest bewerken en verwijderen. Anders niet-->
            @if (this.User.IsInRole("admin"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.artiestid })
                @Html.ActionLink("Edit", "Edit", new { id = item.artiestid })
            }

        </td>
    </tr>
}

</table>
